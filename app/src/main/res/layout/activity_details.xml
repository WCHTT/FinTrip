<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irene.fintrip.DetailsActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_disabled" />

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buyerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="18sp"
        android:text="Owner:"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/buyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/buyerLabel" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/paidMark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_star_border" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/priceLabel"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Price:"/>
        <TextView
            android:id="@+id/priceCurrency"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="USD"/>

        <TextView
            android:id="@+id/price"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/priceCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/pic"
            android:layout_margin="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_photo_camera_black"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/price" />

        <TextView
            android:id="@+id/location"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/locationMark"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:text="Okinawa"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/locationMark"
            android:layout_margin="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_location_on" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/detailsPic"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_disabled"  />

    <RelativeLayout
        android:id="@+id/rlTargetCurrency"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tCurrencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:text="Target currency:"/>
        <Spinner
            android:id="@+id/tCurrencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/tCurrencyLabel" />
    </RelativeLayout>

    <!--Should we display below options when price is keyin?-->
    <RelativeLayout
        android:id="@+id/rlTargetPrice"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:text="Target price:"/>
        <TextView
            android:id="@+id/tPrice"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/tPriceLabel" />
    </RelativeLayout>

</LinearLayout>
